#include<stdio.h>	
int main(){
        int i;
        float num, maiorh, menorh;
        for(i=1; i<=15; i++){
            printf("\nDigite a altura");
            scanf("%f",&num);
            if(i==1){
               maiorh = num;
               if(maiorh<num){
                  maiorh = num;
               }
            }
            else if(i==1){
                 menorh = num;
                 if(menorh>num){
                    menorh = num;
                 }
            }
        }
        printf("Maior altura = %f \n Menor altura =%f",maiorh, menorh);
		return 0;
}
